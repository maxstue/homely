{
  "ForwardedHeaders": {
    "AllowedHosts": [
      "*"
    ]
  },
  "GraphQL": {
    "Request": {
      "IncludeExceptionDetails": true,
      "TracingPreference": "Always"
    }
  },
  "Serilog": {
    "Using": [],
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information",
        "Microsoft.EntityFrameworkCore.Database.Command": "Warning",
        "System": "Information"
      }
    }
  }
}
